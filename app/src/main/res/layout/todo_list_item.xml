<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="30dp"
        app:cardBackgroundColor="#E8F5E9">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/txt_todo_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:paddingTop="20dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textAllCaps="true"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Title that is really long so it takes all the room in the darn view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/txt_date"
                app:layout_constraintHorizontal_weight="3"/>

        <View
                android:id="@+id/color_splash_view"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="@color/colorAccent"
                app:layout_constraintTop_toBottomOf="@id/txt_todo_title"
                app:layout_constraintEnd_toEndOf="@id/txt_todo_title"/>

        <TextView
                android:id="@+id/txt_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txt_todo_title"
                android:padding="20dp"
                tools:text="Description"/>

        <TextView
                android:id="@+id/txt_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="66.66.2099 13:22:22"
                android:maxLines="1"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintHorizontal_weight="1"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>